<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/housesbg"
    tools:context="utility.classified.wijaysharma.easypg.RegisterNow">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:src="@drawable/addusergroup"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:hint="Choose username"
        android:id="@+id/editText3"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignLeft="@+id/editText4"
        android:layout_alignStart="@+id/editText4" />

    <EditText
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:hint="Your Name"
        android:layout_marginTop="10dp"
        android:id="@+id/editText4"
        android:layout_below="@+id/editText3"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:inputType="textEmailAddress"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:id="@+id/editText5"
        android:hint="Email Address"
        android:layout_below="@+id/editText4"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:ems="10"
        android:id="@+id/editText6"
        android:layout_below="@+id/editText5"
        android:layout_alignLeft="@+id/editText5"
        android:layout_alignStart="@+id/editText5"
        android:hint="Your City"
        android:foregroundTintMode="multiply"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText7"
        android:hint="Enter Password"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/editText6"
        android:layout_alignLeft="@+id/editText4"
        android:layout_alignStart="@+id/editText4" />

    <EditText
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText8"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/editText7"
        android:layout_alignLeft="@+id/editText7"
        android:layout_alignStart="@+id/editText7"
        android:hint="Confirm Password" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:background="@drawable/registericon"
        android:id="@+id/button2"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/editText8"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
</ScrollView>

</RelativeLayout>
