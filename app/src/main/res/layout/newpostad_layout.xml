<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/housesbg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:text="Post a new Ad"
                android:id="@+id/textView2"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText9"
                android:hint="Give a Title"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:layout_below="@+id/textView2"
                android:layout_alignLeft="@+id/editText10"
                android:layout_alignStart="@+id/editText10"
                android:layout_alignRight="@+id/editText10"
                android:layout_alignEnd="@+id/editText10" />

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText10"
                android:hint="Enter City"
                android:layout_below="@+id/editText9"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_alignRight="@+id/textView2"
                android:layout_alignEnd="@+id/textView2"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2" />

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/editText11"
                android:hint="Your Contact No"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_below="@+id/editText10"
                android:layout_alignLeft="@+id/editText10"
                android:layout_alignStart="@+id/editText10"
                android:layout_alignRight="@+id/editText10"
                android:layout_alignEnd="@+id/editText10" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PG for:"
                    android:id="@+id/textView3"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="80dp"
                    android:layout_centerVertical="true"

                    />
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/radiogroup"
                    android:gravity="center">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Boys"
                        android:id="@+id/radioButton"
                        android:checked="false"
                        android:textSize="18dp"
                        android:layout_marginLeft="10dp"
                        android:layout_alignBottom="@+id/textView3"
                        android:layout_toLeftOf="@+id/radioButton2"
                        android:layout_toStartOf="@+id/radioButton2" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Girls"
                        android:id="@+id/radioButton2"
                        android:checked="false"
                        android:layout_marginLeft="10dp"
                        android:layout_alignTop="@+id/radioButton"
                        android:layout_alignRight="@+id/editText11"
                        android:layout_alignEnd="@+id/editText11"
                        android:textSize="18dp" />
                </RadioGroup>
            </RelativeLayout>

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText15"
                android:layout_alignTop="@+id/textView5"
                android:layout_alignLeft="@+id/editText11"
                android:layout_alignStart="@+id/editText11"
                android:hint="Rent (Per month)"
                android:layout_gravity="center"
                android:layout_alignRight="@+id/editText11"
                android:layout_alignEnd="@+id/editText11" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

            <TextView
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:text="Select an image:"
                android:textSize="20dp"
                android:id="@+id/textViewselectimg"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Browse.."
                android:id="@+id/button4"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/textViewselectimg"
                 />
</RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:id="@+id/textView4"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_above="@+id/editText13"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:inputType="textMultiLine"
                android:lines="8"
                android:minLines="1"
                android:gravity="top|left"
                android:maxLines="10"
                android:id="@+id/editText13"
                android:scrollbars="vertical"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address:"
                android:id="@+id/textView5"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_above="@+id/editText12"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="20dp" />

            <EditText
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:inputType="textMultiLine"
                android:lines="4"
                android:minLines="1"
                android:gravity="top|left"
                android:maxLines="10"
                android:id="@+id/editText12"
                android:scrollbars="vertical"
                android:layout_above="@+id/textView4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="31dp" />

            <Button
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text="Post Ad"
                android:id="@+id/button5"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/editText13"
                android:layout_centerHorizontal="true" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>


